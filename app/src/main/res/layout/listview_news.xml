<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_centerVertical="true"
            android:id="@+id/iv_news_userPortrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:failureImage="@drawable/icon_userportrait"
            fresco:placeholderImage="@drawable/icon_userportrait"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="#ffffff"
            fresco:roundingBorderWidth="2dp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_news_userPortrait"
            android:id="@+id/tv_news_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@color/main"
            android:textSize="15dp" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_news_username"
            android:id="@+id/tv_news_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textColor="@color/et_hint"
            android:textSize="15dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:id="@+id/iv_news_photo"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>



</LinearLayout>