<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_userinfo">

        <RelativeLayout
            android:background="@drawable/linearlayout_userinfo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_whole"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/imageview_whole" />

        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/linearlayout_userinfo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/iv_half"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/imageview_half" />

        </RelativeLayout>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/framelayout_photowall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>


</LinearLayout>