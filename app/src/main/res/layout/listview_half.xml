<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_listview_user"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/icon_userportrait"
                fresco:roundAsCircle="true"
                fresco:roundingBorderColor="#ffffff"
                fresco:roundingBorderWidth="2dp" />

            <TextView
                android:id="@+id/tv_listview_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/main" />

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_half"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_listview_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:background="#80ffffff"
            android:gravity="center">

            <ImageView
                android:src="@drawable/icon_halfcamera"
                android:id="@+id/iv_left"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:background="#80ffffff"
            android:gravity="center">

            <ImageView
                android:src="@drawable/icon_halfcamera"
                android:id="@+id/iv_right"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#80ffffff"
            android:gravity="center">

            <ImageView
                android:src="@drawable/icon_halfcamera"
                android:id="@+id/iv_top"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:background="#80ffffff"
            android:gravity="center">

            <ImageView
                android:src="@drawable/icon_halfcamera"
                android:id="@+id/iv_bottom"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY" />

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_listview_love"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:id="@+id/tv_listview_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/et_hint" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_listview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/et_hint" />

    </RelativeLayout>

</LinearLayout>