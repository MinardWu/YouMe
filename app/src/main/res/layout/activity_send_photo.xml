<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.minardwu.youme.aty.TakeHalfActivity">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SurfaceView
            android:id="@+id/surface"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:background="#c0ffffff"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentRight="true"
            android:background="#c0ffffff"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="#c0ffffff"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:background="#c0ffffff"
            android:scaleType="fitXY" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/black">

        <Button
            android:id="@+id/btn_top"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_above="@+id/btn_take"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:background="@drawable/icon_take_nopress" />

        <Button
            android:id="@+id/btn_bottom"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_below="@+id/btn_take"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/icon_take_nopress" />

        <Button
            android:id="@+id/btn_left"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:layout_toLeftOf="@+id/btn_take"
            android:background="@drawable/icon_take_nopress" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:layout_toRightOf="@+id/btn_take"
            android:background="@drawable/icon_take_nopress" />

        <Button
            android:id="@+id/btn_take"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_takephoto" />

    </RelativeLayout>


</LinearLayout>
